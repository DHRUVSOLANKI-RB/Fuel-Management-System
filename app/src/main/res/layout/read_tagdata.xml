<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    app:cardBackgroundColor="#edf1fe"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<!--    <ImageView-->
<!--        android:id="@+id/imageView"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="150dp"-->
<!--        android:gravity="center"-->
<!--        app:tint="@color/colorAccentDemo"-->
<!--        app:srcCompat="@drawable/ic_baseline_wifi_off_24" />-->


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/taguuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag UUID:- "
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorAccentDemo"/>
        <TextView
            android:id="@+id/txt_taguuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration No:- "
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorAccentDemo"/>
        <TextView
            android:id="@+id/txt_regisno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Limit:- "
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorAccentDemo"/>
        <TextView
            android:id="@+id/txt_fuellimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAllCaps="true"
        android:background="@drawable/button_shape"
        android:textColor="@color/colorOnPrimaryDemo"
        android:textSize="20sp"
        android:text="OK"
        />

</LinearLayout>

</androidx.cardview.widget.CardView>
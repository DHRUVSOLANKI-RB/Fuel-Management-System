<!--                android:resource="@xml/device_filter"/>-->

        </activity>
        <activity
            android:name=".UserLoginActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

